@model Actor
@{
    ViewData["Title"] = "Viewing All Information";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details of Actor @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img id="picturePriview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="pictureYRL" class="control-lable"></label>
                        <input asp-for="pictureYRL" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" readonly/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" readonly/>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-outline-success" style="position: fixed; right: 25px;" asp-action="Edit"
                         asp-route-id = "@Model.Aid">Edit</a>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("picturePriview");
            output.src = $("#pictureYRL").val();
        })
    </script>
}
