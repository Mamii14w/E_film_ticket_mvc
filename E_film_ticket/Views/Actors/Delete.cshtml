@model Actor
@{
    ViewData["Title"] = "Deleting Actor";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h2>Confirm for Actor @Model.FullName</h2>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="picturePriview" class="border-info rounded-circle" style="max-width: 150px" />
                </div>
                <div class="form-group">
                    <label asp-for="pictureYRL" class="control-lable"></label>
                    <input asp-for="pictureYRL" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Aid" />
                        <input type="submit" value="confirm" class="btn btn-danger float-end" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("picturePriview");
            output.src = $("#pictureYRL").val();
        });
    </script>
}
